{
  "name": "desktop",
  "version": "0.0.1",
  "author": "Canutin <support@canutin.com> (https://canutin.com)",
  "description": "Personal finance platform",
  "main": "main.js",
  "license": "Apache License 2.0",
  "scripts": {
    "start": "node scripts/start-sveltekit-dev.js",
    "dev": "electron-esbuild dev",
    "build": "npm run build:electron && npm run build:vault && npm run build:sveltekit",
    "build:electron": "electron-esbuild build",
    "build:vault": "node scripts/generate-base-vault.js",
    "build:sveltekit": "cd sveltekit && npm run build && cd .. && node scripts/generate-package-json.js",
    "test": "jest --watchAll",
    "package": "npm run build && electron-builder"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.24.0",
    "@types/jest": "^28.1.6",
    "electron": "^20.0.0",
    "electron-builder": "^23.3.3",
    "electron-esbuild": "^5.0.2",
    "electron-store": "^8.1.0",
    "esbuild": "^0.14.49",
    "jest": "^28.1.3",
    "node-fetch": "^3.2.10",
    "prisma": "^4.1.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "build": {
    "productName": "Canutin",
    "appId": "com.canutin.desktop",
    "artifactName": "${name}_v${version}-${os}-${arch}.${ext}",
    "extraMetadata": {
      "name": "desktop",
      "main": "main.js"
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "package.json"
        ]
      },
      {
        "from": "dist/main"
      }
    ],
    "win": {
      "target": [
        "zip"
      ]
    },
    "mac": {
      "target": [
        "zip"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ]
    },
    "directories": {
      "buildResources": "resources"
    },
    "extraResources": [
      {
        "from": "resources/assets",
        "to": "assets"
      },
      {
        "from": "resources/vault",
        "to": "vault",
        "filter": [
          "Canutin.base.vault"
        ]
      },
      {
        "from": "sveltekit/build",
        "to": "sveltekit"
      },
      {
        "from": "node_modules/.prisma/client",
        "to": "sveltekit/node_modules/.prisma/client"
      },
      {
        "from": "node_modules/@prisma/client",
        "to": "sveltekit/node_modules/@prisma/client"
      },
      {
        "from": "node_modules/date-fns",
        "to": "sveltekit/node_modules/date-fns"
      }
    ]
  },
  "dependencies": {
    "@prisma/client": "^4.1.0",
    "date-fns": "^2.29.1"
  }
}
